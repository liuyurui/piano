/* pages/course/course.wxss */
.container {
  height: 100%;
  overflow-y: hidden;
}
.type-container{
  width: 100%;
  height: 88rpx;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
.type-box{
  width:125rpx;
  box-sizing: content-box;
  font-size: 30rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #228fbd;
}
.swip_box {
  height: 100%;
  margin-bottom: 100rpx;
}
.swip_box swiper-item {
  overflow-y: scroll;
}
.swip_box swiper-item view {
  margin-bottom: 100rpx;
}
page {
  height: 100%;
}
.category_area {
  width: 216rpx;
  border-bottom: 2px solid #323232;
  padding: 60rpx 0 20rpx 0;
}
.type-item-long {
  width: 288rpx;
}
.category_area text {
  font-size: 36rpx;
}
swiper-item {
  box-sizing: border-box;
  padding: 0 25rpx 0 25rpx;
}
.intro {
  font-size: 30rpx;
  color: #454545;
  width: 100%;
}
.sub_title_area {
  margin: 60rpx 0 30rpx 0;
}
.sub_title {
  font-size: 34rpx;
  color: #454545;
}
.sub_desc {
  color: #333c44;
  font-size: 30rpx;
}