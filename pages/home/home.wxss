/* pages/home/home.wxss */
page {
  background-color: #efefef;
}
.container {
  background-color: #efefef;
}
.banner {
  width: 750rpx;
  height: 375rpx;
}
.type-container{
  width: 100%;
  height: 88rpx;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
.type-box{
  width:125rpx;
  box-sizing: content-box;
  font-size: 30rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #228fbd;
}

.category_box {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0 20rpx 20rpx 20rpx;
  background-color: #efefef;
}
.good_box {
  width: 350rpx;
  height: 530rpx;
  box-sizing: content-box;
  background: white;
  margin-top: 20rpx;
}
.good_box image {
  width: 350rpx;
  height: 350rpx;
}
.good_box view {
  width: 350rpx;
  height: 180rpx;
}
.good_title {
  display: -webkit-box;
  font-size: 30rpx;
  color: #000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow:ellipsis;
  padding: 20rpx 20rpx 0 20rpx;
}

.good_price_buy {
  position: relative;
  max-height: 80rpx;
}
.good_buy {
  position: absolute;
  width: 100rpx;
  height: 45rpx;
  border: 1px solid #ff153c;
  text-align: center;
  right: 20rpx;
  top: 10rpx;
  font-size: 30rpx;
  color: #ff153c;
}
.good_price {
  position: absolute;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  left: 20rpx;
  top: 15rpx;
  font-size: 30rpx;
  color: #ff153c;
}