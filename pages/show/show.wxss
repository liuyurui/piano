/* pages/show/show.wxss */
page {
  background-color: #f2f5f9;
}
.container {
  background-color: #f2f5f9;
  padding-bottom: 38rpx;
}
.item {
  position: relative;
  height: 455rpx;
  margin: 38rpx 20rpx 0 20rpx;
}
.item_bg {
  position: absolute;
  background-color: white;
  width: 680rpx;
  height: 425rpx;
  border: 1px solid #ecedf1;
  border-radius: 10rpx;
  left: 30rpx;
  top: 30rpx;
}
.item_image {
  position: absolute;
  height: 400rpx;
  width: 340rpx;
  top: 0;
  left: 0;
  border: 2px solid white;
}
.item_image image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.item_bg text {
  position: absolute;
  left: 335rpx;
}
.sub_title {
  top: 40rpx;
  border-bottom: 4rpx solid black;
  padding-bottom: 6rpx;
  color: #34343c;
  font-size: 36rpx;
}
.item_desc {
  top: 126rpx;
  color: #aab4c0;
  font-size: 30rpx;
  line-height: 36rpx;
}
.open_more {
  text-align: right;
  padding-right: 20rpx;
  right: 0;
  bottom: 30rpx;
  font-size: 30rpx;
  color: #228fbd;
}
.video_area video {
  width: 710rpx;
  margin: 30rpx 0 20rpx 20rpx;
  height: 450rpx;
}
.video_area {
  background-color: white;
}